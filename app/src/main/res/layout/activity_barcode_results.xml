<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/bg_gradient_start"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:columnCount="2"
    android:rowCount="11"
    android:padding="5dp"
    android:descendantFocusability="beforeDescendants"
    android:fitsSystemWindows="true"
    tools:context=".BarcodeResults">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:text="Name :"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_column="0"
            android:layout_row="0"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <TextView
            android:id="@+id/BFoodNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Brand :"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_column="0"
            android:layout_row="1"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/BBrandId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Barcode :"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_column="0"
            android:layout_row="1"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/BBarId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Serving size :"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/BServeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Ingredients :"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/BIngrId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Nutritional Scores :"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_column="0"
            android:layout_row="4"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/BNtrScoreId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>




    <Button
        android:id="@+id/BReadAgainID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="10"
        android:layout_column="0"
        android:layout_margin="40dp"
        android:padding="8dp"
        android:text="READ AGAIN"
        android:textColor="@color/white"
        android:textSize="15dp" />



</LinearLayout>